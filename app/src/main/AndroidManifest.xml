<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="tech.salroid.filmy">

    <uses-permission android:name="android.permission.INTERNET" />

    !-- Permissions required by the sync adapter -->
    <uses-permission
        android:name="android.permission.READ_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.WRITE_SYNC_SETTINGS"/>
    <uses-permission
        android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
        android:name=".FilmyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Base">
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity
            android:name=".Activity.MovieDetailsActivity"
            android:label=" "
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activity.CharacterDetailsActivity"
            android:label="Details"
            android:theme="@style/AppTheme.Base" />

        <provider
            android:name=".Provider.FilmProvider"
            android:syncable="true"
            android:exported="false"
            android:authorities="@string/content_authority" />

        <activity
            android:name=".Activity.FullCastActivity"
            android:label=" "
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name=".Activity.FullMovieActivity"
            android:label="@string/title_activity_full_movie"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name=".Activity.FullScreenImage"
            android:label=" "
            android:theme="@style/FullScreenTheme" />
        <activity
            android:name=".Activity.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name=".Activity.SavedMovies"
            android:label="@string/title_activity_saved_movies"
            android:theme="@style/AppTheme.Base"></activity>

        <!--<service android:name=".Service.FilmyService"/>
        <receiver android:name=".Service.FilmyService$AlarmReciever"/>-->


        <!-- SyncAdapter's dummy authentication service -->
        <service android:name=".Sync.FilmyAuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>
            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- The SyncAdapter service -->
        <service
            android:name=".Sync.FilmySyncService"
            android:exported="true"
            >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>
            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>




    </application>

</manifest>