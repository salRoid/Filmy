<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.MD3" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="colorOnSurface">@color/lightColorOnSurface</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="divider">@color/dividerColor</item>
        <item name="colorSecondaryContainer">@color/colorAccent</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceVariant</item>
        <item name="android:statusBarColor">@color/colorAccentTint</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/colorAccentTint</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="snackbarStyle">@style/Widget.App.Snackbar</item>
    </style>


    <style name="AppTheme.MD3.Details" parent="AppTheme.MD3">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@color/surfaceColorLight</item>
    </style>

</resources>