<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="divider">@color/dividerColor</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
    </style>

    <style name="AppTheme.Base.Light.Dialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Base.Dialog" parent="Theme.MaterialComponents.Dialog">
        <item name="colorPrimary">@color/colorAccent</item>
    </style>

    <style name="AppTheme.MD3.Details" parent="AppTheme.MD3">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="AppTheme.MD3.Dark.Details" parent="AppTheme.MD3.Dark">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/colorMore</item>
        <item name="divider">@color/dividerColorDarkTheme</item>
        <item name="android:navigationBarColor">@color/surfaceColorDark</item>
    </style>

